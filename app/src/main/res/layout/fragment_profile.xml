<?xml version="1.0" encoding="utf-8"?>
<com.nirhart.parallaxscroll.views.ParallaxScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    app:parallax_factor="1.9"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/header_imageview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@drawable/pic0"
            />
        <com.relhs.asianfinder.view.CustomTextView
            app:fontName="MyriadProCond.ttf"
            app:fontColor="@color/white"
            app:fontStyle="italics"
            style="@style/text_Appearance_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/sample_quotes"
            android:ellipsize="end"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/bg_gradient_shape_bus_title"
            android:padding="5dp"/>

        <LinearLayout
            android:id="@+id/informations_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_below="@+id/header_imageview"
            android:padding="5dp">

            <com.relhs.asianfinder.view.CustomTextView
                app:fontName="MyriadProCond.ttf"
                app:fontColor="@color/black"
                app:fontStyle="bold"
                style="@style/text_Appearance_large"
                android:id="@+id/txtUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RobHughes"
                android:layout_marginStart="105dp"
                android:layout_marginLeft="105dp"
                tools:ignore="HardcodedText"/>

            <com.relhs.asianfinder.view.CustomTextView
                app:fontName="MyriadProCond.ttf"
                app:fontColor="#FF707070"
                style="@style/text_Appearance_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="12 Favorites | 5 Interest | 4.5K Views"
                android:ellipsize="end"
                android:layout_marginStart="105dp"
                android:layout_marginLeft="105dp"
                tools:ignore="HardcodedText"/>

            <com.relhs.asianfinder.view.CustomTextView
                app:fontName="MyriadProCond.ttf"
                app:fontColor="#FF707070"
                style="@style/text_Appearance_small"
                android:id="@+id/txtLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Taguig, Manila, Philippines"
                android:ellipsize="end"
                android:layout_marginStart="105dp"
                android:layout_marginLeft="105dp"
                tools:ignore="HardcodedText"/>

            <com.relhs.asianfinder.view.CustomTextView
                app:fontName="MyriadProCond.ttf"
                app:fontColor="#FF707070"
                style="@style/text_Appearance_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Say something about myself, Say something about myself, Say something about myself."
                android:ellipsize="end"
                android:layout_marginTop="20dp"
                tools:ignore="HardcodedText"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                tools:ignore="HardcodedText">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <ImageButton
                        android:id="@+id/photosThumbs"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/emo_10"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:layout_centerHorizontal="true"

                        />
                    <com.relhs.asianfinder.view.CustomTextView
                        android:layout_below="@+id/photosThumbs"
                        app:fontName="MyriadProCond.ttf"
                        app:fontColor="@color/black"
                        style="@style/text_Appearance_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PHOTOS"
                        tools:ignore="HardcodedText"
                        android:layout_centerHorizontal="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <ImageButton
                        android:id="@+id/videosThumbs"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/emo_10"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:layout_centerHorizontal="true"

                        />
                    <com.relhs.asianfinder.view.CustomTextView
                        android:layout_below="@+id/videosThumbs"
                        app:fontName="MyriadProCond.ttf"
                        app:fontColor="@color/black"
                        style="@style/text_Appearance_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VIDEOS"
                        tools:ignore="HardcodedText"
                        android:layout_centerHorizontal="true"
                        />
                </RelativeLayout>

                <!--<ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/emo_11"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"/>-->

            </LinearLayout>

            <!--APPEARANCE-->
            <View
                android:layout_marginTop="5dp"
                android:background="@drawable/horizontal_line"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layerType="software" />
            <com.relhs.asianfinder.view.CustomTextView
                app:fontName="MyriadProCond.ttf"
                app:fontColor="@color/white"
                style="@style/text_Appearance_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingLeft="5dp"
                android:text="APPEARANCE"
                tools:ignore="HardcodedText"
                android:background="@drawable/bg_gradient_shape_bus_title"/>
            <View
                android:background="@drawable/horizontal_line"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layerType="software" />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:id="@+id/list_recycled_parts_appearance"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"/>
            <!--APPEARANCE-->

            <!--LIFESTYLE-->
            <View
                android:layout_marginTop="5dp"
                android:background="@drawable/horizontal_line"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layerType="software" />
            <com.relhs.asianfinder.view.CustomTextView
                app:fontName="MyriadProCond.ttf"
                app:fontColor="@color/white"
                style="@style/text_Appearance_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingLeft="5dp"
                android:text="LIFESTYLE"
                tools:ignore="HardcodedText"
                android:background="@drawable/bg_gradient_shape_bus_title"/>
            <View
                android:background="@drawable/horizontal_line"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layerType="software" />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:id="@+id/list_recycled_parts_lifestle"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"/>
            <!--LIFESTYLE-->

            <!--CULTURE VALUES-->
            <View
                android:layout_marginTop="5dp"
                android:background="@drawable/horizontal_line"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layerType="software" />
            <com.relhs.asianfinder.view.CustomTextView
                app:fontName="MyriadProCond.ttf"
                app:fontColor="@color/white"
                style="@style/text_Appearance_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingLeft="5dp"
                android:text="CULTURE VALUES"
                tools:ignore="HardcodedText"
                android:background="@drawable/bg_gradient_shape_bus_title"/>
            <View
                android:background="@drawable/horizontal_line"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layerType="software" />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:id="@+id/list_recycled_parts_culture_values"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"/>
            <!--CULTURE VALUES-->

            <!--PERSONAL-->
            <View
                android:layout_marginTop="5dp"
                android:background="@drawable/horizontal_line"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layerType="software" />
            <com.relhs.asianfinder.view.CustomTextView
                app:fontName="MyriadProCond.ttf"
                app:fontColor="@color/white"
                style="@style/text_Appearance_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingLeft="5dp"
                android:text="PERSONAL"
                tools:ignore="HardcodedText"
                android:background="@drawable/bg_gradient_shape_bus_title"/>
            <View
                android:background="@drawable/horizontal_line"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layerType="software" />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:id="@+id/list_recycled_parts_personal"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"/>
            <!--PERSONAL-->

            <!--INTEREST-->
            <View
                android:layout_marginTop="5dp"
                android:background="@drawable/horizontal_line"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layerType="software" />
            <com.relhs.asianfinder.view.CustomTextView
                app:fontName="MyriadProCond.ttf"
                app:fontColor="@color/white"
                style="@style/text_Appearance_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingLeft="5dp"
                android:text="INTEREST"
                tools:ignore="HardcodedText"
                android:background="@drawable/bg_gradient_shape_bus_title"/>
            <View
                android:background="@drawable/horizontal_line"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layerType="software" />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:id="@+id/list_recycled_parts_interest"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"/>
            <!--INTEREST-->

        </LinearLayout>

        <!-- cheat code: negative margin -->
        <ImageView
            android:id="@+id/photoMain"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_above="@+id/informations_container"
            android:layout_marginBottom="-75dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"/>

    </RelativeLayout>
</com.nirhart.parallaxscroll.views.ParallaxScrollView>