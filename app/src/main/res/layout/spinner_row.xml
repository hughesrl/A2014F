    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <com.relhs.asianfinder.view.CustomTextView
        app:fontName="MyriadProCond.ttf"
        app:fontStyle="bold"
