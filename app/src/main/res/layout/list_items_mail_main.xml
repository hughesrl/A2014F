<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal"
    android:id="@+id/myProfile"
    android:padding="@dimen/rounded_padding"
    android:gravity="center|start"
    >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/user_photo_size"
        android:layout_height="@dimen/user_photo_size"
        android:contentDescription="@string/app_name"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:visibility="gone"
        />

    <com.relhs.asianfinder.view.CustomTextView
        android:id="@+id/title"
        app:fontName="MyriadProCond.ttf"
        app:fontColor="#FF000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/icon"
        android:layout_toEndOf="@id/icon"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:text="ASIAN FINDER"
        style="@style/text_Appearance_large"/>

    <com.relhs.asianfinder.view.CustomTextView
        app:fontName="MyriadProCond.ttf"
        app:fontColor="#FF000000"
        android:id="@+id/counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/counter_bg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:text="10"
        />

</RelativeLayout>